<UserControl
  x:Class="VianaNET.MainWindow.TopFrame"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  mc:Ignorable="d"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="100" d:DesignWidth="286">
  <UserControl.Resources>
    <ResourceDictionary Source="/VianaNET;component/CustomStyles/Styles/VianaStyle.xaml" />
  </UserControl.Resources>
  <Border CornerRadius="2" BorderBrush="White" BorderThickness="1" Background="{StaticResource BannerBackgroundBrush}">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="80" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Image VerticalAlignment="Top" Grid.Column="0" Name="LeftIcon" Width="64" Margin="8"
             Source="/VianaNET;component/Images/VianaLogo64.png" />
      <TextBlock VerticalAlignment="Top" Grid.Column="1" Name="Header" Foreground="White" FontSize="14"
                 TextWrapping="Wrap" Margin="5">
        Title again
      </TextBlock>
    </Grid>
  </Border>
</UserControl>