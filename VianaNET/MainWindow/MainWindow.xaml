          <r:RibbonButton Click="AboutButtonClick"
                         Label="{lex:LocText VianaNET:Labels:ButtonAboutLabelTitle}"
                         SmallImageSource="/VianaNET;component/Images/Help16.png"
                         LargeImageSource="/VianaNET;component/Images/Help32.png"
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonAboutToolTipTitle}"
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonAboutToolTipDescription}" />
