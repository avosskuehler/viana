<RibbonWindow 
  x:Class="VianaNET.MainWindow.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:lex="http://wpflocalizeextension.codeplex.com"
  lex:LocalizeDictionary.DesignCulture="de"
  xmlns:video="clr-namespace:VianaNET.Modules.Video"
  xmlns:dataGrid="clr-namespace:VianaNET.Modules.DataGrid"
  xmlns:chart="clr-namespace:VianaNET.Modules.Chart" 
  xmlns:control="clr-namespace:VianaNET.Modules.Video.Control"
  xmlns:mainWindow="clr-namespace:VianaNET.MainWindow" 
  xmlns:vianaNet="clr-namespace:VianaNET" 
  xmlns:application="clr-namespace:VianaNET.Application"
  WindowStartupLocation="CenterScreen" WindowState="Maximized"
  Icon="/VianaNET;component/Images/VianaNET.ico"
  Height="479" Width="900" MinHeight="300" MinWidth="400"
  Title="{lex:Loc VianaNET:Labels:ApplicationTitle}" Closing="MainWindowClosing">

  <RibbonWindow.Resources>
    <ResourceDictionary Source="/VianaNET;component/CustomStyles/Styles/VianaStyle.xaml"/>
  </RibbonWindow.Resources>
  <Grid Name="MainGrid">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Ribbon Grid.Row="0"
              Title="{lex:Loc VianaNET:Labels:ApplicationTitle}" 
              x:Name="MainRibbon">
      <Ribbon.ApplicationMenu>
        <RibbonApplicationMenu SmallImageSource="/VianaNET;component/Images/VianaNET_32.png" KeyTip="S" Label="Datei" IsMainMenu="True">
          <RibbonApplicationMenuItem 
                        Click="OpenProjectOnClick"
                        Header="{lex:Loc VianaNET:Labels:QATButtonOpenLabelTitle}"
                        ImageSource="/VianaNET;component/Images/FileOpen32.png"
                        QuickAccessToolBarImageSource="/VianaNET;component/Images/FileOpen16.png" 
                        ToolTipDescription="{lex:Loc VianaNET:Labels:QATButtonOpenToolTipDescription}" 
                        ToolTipTitle="{lex:Loc VianaNET:Labels:QATButtonOpenLabelTitle}"/>
          <RibbonApplicationMenuItem 
                        Click="SaveProjectClick"
                        Header="{lex:Loc VianaNET:Labels:QATButtonSaveLabelTitle}"
                        ImageSource="/VianaNET;component/Images/Save32.png"
                        QuickAccessToolBarImageSource="/VianaNET;component/Images/Save16.png" 
                        ToolTipDescription="{lex:Loc VianaNET:Labels:QATButtonSaveToolTipDescription}" 
                        ToolTipTitle="{lex:Loc VianaNET:Labels:QATButtonSaveLabelTitle}"/>
          <RibbonApplicationMenuItem 
                        Click="SaveProjectAsClick"
                        Header="{lex:Loc VianaNET:Labels:QATButtonSaveAsLabelTitle}"
                        ImageSource="/VianaNET;component/Images/Save32.png"
                        QuickAccessToolBarImageSource="/VianaNET;component/Images/Save16.png" 
                        ToolTipDescription="{lex:Loc VianaNET:Labels:QATButtonSaveAsToolTipDescription}" 
                        ToolTipTitle="{lex:Loc VianaNET:Labels:QATButtonSaveAsLabelTitle}"/>
          <RibbonSeparator/>
          <RibbonApplicationMenuItem 
                         Click="LoadVideoButtonClick"
                         ImageSource="/VianaNET;component/Images/LoadVideo32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/LoadVideo16.png"
                         Header="{lex:Loc VianaNET:Labels:ButtonLoadVideoLabelTitle}" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonLoadVideoToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonLoadVideoToolTipDescription}" />
          <RibbonApplicationMenuItem 
                         Click="RecordVideoButtonClick"
                         ImageSource="/VianaNET;component/Images/RecordVideo32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/RecordVideo16.png"
                         Header="{lex:Loc VianaNET:Labels:ButtonRecordVideoLabelTitle}" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonRecordVideoToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonRecordVideoToolTipDescription}"
                         IsEnabled="{Binding Path=HasVideoInputDevices, Source={x:Static control:Video.Instance}}"/>
          <RibbonApplicationMenuItem
                         Click="CaptureVideoButtonClick" 
                         Header="{lex:Loc VianaNET:Labels:ButtonCaptureVideoLabelTitle}"
                         ImageSource="/VianaNET;component/Images/Capture32.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonCaptureVideoToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonCaptureVideoToolTipDescription}" 
                         IsEnabled="{Binding Path=HasVideoInputDevices, Source={x:Static control:Video.Instance}}"/>
          <RibbonSeparator/>
          <RibbonApplicationSplitMenuItem
            Header="{lex:Loc VianaNET:Labels:ButtonExportDataLabelTitle}"
            ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonExportDataToolTipTitle}"
            ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonExportDataToolTipDescription}"
            ImageSource="/VianaNET;component/Images/ExportData32.png" >
            <RibbonSeparator Label="{lex:Loc VianaNET:Labels:ButtonExportDataLabelTitle}"/>
            <RibbonApplicationMenuItem Click="ExportDataToTxtButtonClick" 
                         Header="{lex:Loc VianaNET:Labels:ButtonExportDataToTxtLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportToTxt32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportToTxt16.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonExportDataToTxtToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonExportDataToTxtToolTipDescription}"
                         IsEnabled="{Binding Path=VideoData.HasSamples, Source={x:Static application:Viana.Project}}"/>
            <RibbonApplicationMenuItem Click="ExportDataToCsvButtonClick" 
                         Header="{lex:Loc VianaNET:Labels:ButtonExportDataToCsvLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportToCsv32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportToCsv16.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonExportDataToCsvToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonExportDataToCsvToolTipDescription}"
                         IsEnabled="{Binding Path=VideoData.HasSamples, Source={x:Static application:Viana.Project}}"/>
            <RibbonApplicationMenuItem Click="ExportDataToXmlButtonClick" 
                         Header="{lex:Loc VianaNET:Labels:ButtonExportDataToXmlLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportToXml32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportToXml16.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonExportDataToXmlToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonExportDataToXmlToolTipDescription}"
                         IsEnabled="{Binding Path=VideoData.HasSamples, Source={x:Static application:Viana.Project}}"
                                       Visibility="Hidden"/>
            <RibbonApplicationMenuItem Click="ExportDataToXlsButtonClick" 
                         Header="{lex:Loc VianaNET:Labels:ButtonExportDataToXlsLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportToXls32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportToXls16.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonExportDataToXlsToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonExportDataToXlsToolTipDescription}"
                         IsEnabled="{Binding Path=VideoData.HasSamples, Source={x:Static application:Viana.Project}}"/>
            <RibbonApplicationMenuItem Click="ExportDataToOdsButtonClick" 
                         Header="{lex:Loc VianaNET:Labels:ButtonExportDataToOdsLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportToOds32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportToOds16.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonExportDataToOdsToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonExportDataToOdsToolTipDescription}"
                         IsEnabled="{Binding Path=VideoData.HasSamples, Source={x:Static application:Viana.Project}}"/>
          </RibbonApplicationSplitMenuItem>
          <RibbonApplicationSplitMenuItem 
            Header="{lex:Loc VianaNET:Labels:ButtonExportChartLabelTitle}"
            ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonExportChartToolTipTitle}"
            ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonExportChartToolTipDescription}"
            ImageSource="/VianaNET;component/Images/ExportChart32.png" >
            <RibbonSeparator Label="{lex:Loc VianaNET:Labels:ButtonExportChartLabelTitle}"/>
            <RibbonApplicationMenuItem Click="ExportChartToClipboardButtonClick" 
                         Header="{lex:Loc VianaNET:Labels:ButtonExportChartToClipboardLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportChartToClipboard32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportChartToClipboard16.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonExportChartToClipboardToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonExportChartToClipboardToolTipDescription}"
                         IsEnabled="{Binding Path=VideoData.HasSamples, Source={x:Static application:Viana.Project}}"/>
            <RibbonApplicationMenuItem 
                         Click="ExportChartToFileButtonClick" 
                         Header="{lex:Loc VianaNET:Labels:ButtonExportChartToFileLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportChartToFile32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportChartToFile16.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonExportChartToFileToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonExportChartToFileToolTipDescription}"
                         IsEnabled="{Binding Path=VideoData.HasSamples, Source={x:Static application:Viana.Project}}"/>
            <RibbonApplicationMenuItem 
                         Click="ExportChartToWordButtonClick" 
                         Header="{lex:Loc VianaNET:Labels:ButtonExportChartToWordLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportChartToWord32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportChartToWord16.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonExportChartToWordToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonExportChartToWordToolTipDescription}"
                         IsEnabled="{Binding Path=VideoData.HasSamples, Source={x:Static application:Viana.Project}}"/>
          </RibbonApplicationSplitMenuItem>
          <RibbonApplicationMenu.AuxiliaryPaneContent>
            <Grid Name="AuxPaneGrid">
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
              </Grid.RowDefinitions>
              <RibbonSeparator Grid.Row="0" Label="{lex:Loc VianaNET:Labels:RibbonApplicationMenuRecentFilesTitle}"/>
              <ItemsControl Grid.Row="2" ItemsSource="{Binding Source={x:Static application:RecentFiles.Instance}, Path=RecentFilesCollection}">
                <ItemsControl.ItemContainerStyle>
                  <Style TargetType="{x:Type FrameworkElement}">
                    <EventSetter Event="MouseDown" Handler="RecentProjectMouseDown"/>
                  </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                  <DataTemplate>
                    <Border x:Name="MainBorder" 
                                                BorderThickness="1"
                                                Padding="5,2,5,2">
                      <Grid Name="MainBorderGrid">
                        <Grid.ColumnDefinitions>
                          <ColumnDefinition Width="Auto" />
                          <ColumnDefinition Width="5" />
                          <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="{Binding ProjectImageSource}"/>
                        <TextBlock Grid.Column="2" Text="{Binding ProjectFileName, Mode=OneWay}" ToolTip="{Binding ProjectFile}"/>
                      </Grid>
                    </Border>
                    <DataTemplate.Triggers>
                      <Trigger Property="IsMouseOver" Value="True">
                        <Setter TargetName="MainBorder" Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent},Path=(RibbonControlService.Ribbon).MouseOverBackground}" />
                        <Setter TargetName="MainBorder" Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource TemplatedParent},Path=(RibbonControlService.Ribbon).MouseOverBorderBrush}" />
                      </Trigger>
                    </DataTemplate.Triggers>
                  </DataTemplate>
                </ItemsControl.ItemTemplate>
              </ItemsControl>
            </Grid>
          </RibbonApplicationMenu.AuxiliaryPaneContent>
          <RibbonApplicationMenu.FooterPaneContent>
            <Grid Name="FooterGrid">
              <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
              <RibbonButton Grid.Column="2" Click="CloseButtonClick" 
                         Label="{lex:Loc VianaNET:Labels:ButtonCloseApplicationLabelTitle}" 
                         SmallImageSource="/VianaNET;component/Images/Reset16.png" 
                         LargeImageSource="/VianaNET;component/Images/Reset32.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonCloseApplicationToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonCloseApplicationToolTipDescription}">
                <RibbonButton.ControlSizeDefinition>
                  <RibbonControlSizeDefinition ImageSize="Small" />
                </RibbonButton.ControlSizeDefinition>
              </RibbonButton>
            </Grid>
          </RibbonApplicationMenu.FooterPaneContent>
        </RibbonApplicationMenu>
      </Ribbon.ApplicationMenu>
      <RibbonTab x:Name="RibbonTabHome" Header="{lex:Loc VianaNET:Labels:RibbonTabHomeLabel}">
        <RibbonGroup Header="{lex:Loc VianaNET:Labels:RibbonGroupOpenVideoLabelTitle}" LargeImageSource="/VianaNET;component/Images/LoadVideo32.png" >
          <RibbonButton Click="LoadVideoButtonClick"
                         LargeImageSource="/VianaNET;component/Images/LoadVideo32.png" 
                         SmallImageSource="/VianaNET;component/Images/LoadVideo16.png"
                         Label="{lex:Loc VianaNET:Labels:ButtonLoadVideoLabelTitle}"
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonLoadVideoToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonLoadVideoToolTipDescription}"/>
          <RibbonButton Click="RecordVideoButtonClick" 
                         Label="{lex:Loc VianaNET:Labels:ButtonRecordVideoLabelTitle}"
                         SmallImageSource="/VianaNET;component/Images/RecordVideo16.png" 
                         LargeImageSource="/VianaNET;component/Images/RecordVideo32.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonRecordVideoToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonRecordVideoToolTipDescription}"
                         IsEnabled="{Binding Path=HasVideoInputDevices, Source={x:Static control:Video.Instance}}"/>
          <RibbonButton Click="CaptureVideoButtonClick" 
                         Label="{lex:Loc VianaNET:Labels:ButtonCaptureVideoLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/Capture32.png" 
                         SmallImageSource="/VianaNET;component/Images/Capture16.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonCaptureVideoToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonCaptureVideoToolTipDescription}" 
                         IsEnabled="{Binding Path=HasVideoInputDevices, Source={x:Static control:Video.Instance}}"/>
        </RibbonGroup>
        <RibbonGroup Header="{lex:Loc VianaNET:Labels:RibbonGroupPrepareLabelTitle}" LargeImageSource="/VianaNET;component/Images/Calibrate32.png">
          <RibbonButton Click="ShowVideoInfosButtonClick"
                         Label="{lex:Loc VianaNET:Labels:ShowVideoInfosButtonLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/VideoInfo32.png"
                         SmallImageSource="/VianaNET;component/Images/VideoInfo16.png"
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ShowVideoInfosButtonToolTipTitle}"
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ShowVideoInfosButtonToolTipDescription}"
                         IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"/>
          <RibbonButton Click="CalibrateVideoButtonClick"
                         Label="{lex:Loc VianaNET:Labels:ButtonCalibrateVideoLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/Calibrate32.png"
                         SmallImageSource="/VianaNET;component/Images/Calibrate16.png"
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonCalibrateVideoToolTipTitle}"
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonCalibrateVideoToolTipDescription}"
                         IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"/>
          <RibbonButton Click="CoordinateSystemButtonClick"
                         Label="{lex:Loc VianaNET:Labels:ButtonCoordinateSystemLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/CoordinateSystem32.png"
                         SmallImageSource="/VianaNET;component/Images/CoordinateSystem16.png"
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonCoordinateSystemToolTipTitle}"
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonCoordinateSystemToolTipDescription}"
                         IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"/>
          <RibbonButton Name="SelectNumberOfObjectsButton"
                         Click="SelectNumberOfObjectsButtonClick"
                         Label="{lex:Loc VianaNET:Labels:ButtonSelectNumberOfObjectsLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/SelectColor32.png" 
                         SmallImageSource="/VianaNET;component/Images/SelectColor16.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonSelectNumberOfObjectsToolTipTitle}"
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonSelectNumberOfObjectsToolTipDescription}" 
                         IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"/>
          <RibbonButton Click="ManualDataAquisitionButtonClick" 
                         Label="{lex:Loc VianaNET:Labels:ButtonManualDataAquisitionLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/ManualDataAquisition32.png" 
                         SmallImageSource="/VianaNET;component/Images/ManualDataAquisition16.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonManualDataAquisitionToolTipTitle}"
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonManualDataAquisitionToolTipDescription}"
                         IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"/>
          <RibbonButton Click="ChooseAutomaticAnalysisButtonClick" 
                         Label="{lex:Loc VianaNET:Labels:ButtonChooseAutomaticAnalysisLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/AutomaticDataAquisition32.png" 
                         SmallImageSource="/VianaNET;component/Images/AutomaticDataAquisition16.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonChooseAutomaticAnalysisToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonChooseAutomaticAnalysisToolTipDescription}"
                         IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"/>
        </RibbonGroup>
        <RibbonGroup Header="{lex:Loc VianaNET:Labels:RibbonGroupWindowsLabelTitle}" LargeImageSource="/VianaNET;component/Images/Datagrid32.png">
          <RibbonButton Click="VideoWindowButtonClick" 
                         Label="{lex:Loc VianaNET:Labels:ButtonVideoWindowLabelTitle}"
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonVideoWindowToolTipTitle}" 
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonVideoWindowToolTipDescription}" 
                         SmallImageSource="/VianaNET;component/Images/VideoWindow16.png" 
                         LargeImageSource="/VianaNET;component/Images/VideoWindow32.png" />
          <RibbonButton Click="DatagridWindowButtonClick" 
                         Label="{lex:Loc VianaNET:Labels:ButtonDatagridWindowLabelTitle}" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonDatagridWindowToolTipTitle}"
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonDatagridWindowToolTipDescription}"
                         SmallImageSource="/VianaNET;component/Images/Datagrid16.png"
                         LargeImageSource="/VianaNET;component/Images/Datagrid32.png" />
          <RibbonButton Click="ChartWindowButtonClick" 
                         Label="{lex:Loc VianaNET:Labels:ButtonChartWindowLabelTitle}" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonChartWindowToolTipTitle}"
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonChartWindowToolTipDescription}"
                         SmallImageSource="/VianaNET;component/Images/Chart16.png"
                         LargeImageSource="/VianaNET;component/Images/Chart32.png" />
        </RibbonGroup>
      </RibbonTab>
      <RibbonTab x:Name="RibbonTabAnalysis" Header="{lex:Loc VianaNET:Labels:RibbonTabAnalysisLabel}">
        <RibbonGroup Header="{lex:Loc VianaNET:Labels:RibbonGroupManualAquisitionLabelTitle}" LargeImageSource="/VianaNET;component/Images/ManualDataAquisition32.png">
          <RibbonButton Click="ManualDataAquisitionButtonClick" HorizontalAlignment="Center"
                        Label="{lex:Loc VianaNET:Labels:ButtonManualDataAquisitionLabelTitle}"
                        LargeImageSource="/VianaNET;component/Images/ManualDataAquisition32.png"
                        SmallImageSource="/VianaNET;component/Images/ManualDataAquisition16.png"
                        ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonManualDataAquisitionToolTipTitle}"
                        ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonManualDataAquisitionToolTipDescription}"
                        IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"/>
          <RibbonButton Click="ModifyDataButtonClick" HorizontalAlignment="Center"
                        Label="{lex:Loc VianaNET:Labels:ButtonModifyDataLabelTitle}"
                        LargeImageSource="/VianaNET;component/Images/ModifyData32.png"
                        SmallImageSource="/VianaNET;component/Images/ModifyData16.png"
                        ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonModifyDataToolTipTitle}"
                        ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonModifyDataToolTipDescription}"
                        IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"/>
        </RibbonGroup>
        <RibbonGroup Header="{lex:Loc VianaNET:Labels:RibbonGroupAutomaticAquisitionLabelTitle}" LargeImageSource="/VianaNET;component/Images/AutomaticDataAquisition32.png">
          <RibbonButton Click="SelectColorButtonClick" 
                         Name="SelectColorRibbonButton"
                         Label="{lex:Loc VianaNET:Labels:ButtonSelectColorLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/SelectColor32.png" 
                         SmallImageSource="/VianaNET;component/Images/SelectColor16.png" 
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonSelectColorToolTipTitle}"
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonSelectColorToolTipDescription}"
                         IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"/>
          <RibbonButton Click="ClipVideoButtonClick"
                         Label="{lex:Loc VianaNET:Labels:ButtonClipVideoLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/ClipVideo32.png"
                         SmallImageSource="/VianaNET;component/Images/ClipVideo16.png"
                         ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonClipVideoToolTipTitle}"
                         ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonClipVideoToolTipDescription}"
                         IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"/>
          <RibbonButton Name="StartAutomaticAquisition" 
                        Click="AutomaticDataAquisitionButtonClick" 
                        Label="{lex:Loc VianaNET:Labels:ButtonAutomaticDataAquisitionLabelTitle}"
                        LargeImageSource="/VianaNET;component/Images/AutomaticDataAquisition32.png" 
                        SmallImageSource="/VianaNET;component/Images/AutomaticDataAquisition16.png" 
                        ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonAutomaticDataAquisitionToolTipTitle}" 
                        ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonAutomaticDataAquisitionToolTipDescription}"
                        IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"
                        Visibility="{Binding Path=IsDataAcquisitionRunning,Source={x:Static control:Video.Instance}, Converter={StaticResource BoolVisibleConverterInverse}}"/>
          <RibbonButton Name="StopAutomaticAquisition"
                        Visibility="{Binding Path=IsDataAcquisitionRunning, Source={x:Static control:Video.Instance}, Converter={StaticResource BoolVisibleConverter}}"
                        Click="AutomaticDataAquisitionStopButtonClick" 
                        Label="{lex:Loc VianaNET:Labels:ButtonAutomaticDataAquisitionStopLabelTitle}"
                        LargeImageSource="/VianaNET;component/Images/AutomaticDataAquisitionStop32.png" 
                        SmallImageSource="/VianaNET;component/Images/AutomaticDataAquisitionStop16.png" 
                        ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonAutomaticDataAquisitionStopToolTipTitle}" 
                        ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonAutomaticDataAquisitionStopToolTipDescription}" 
                        IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"/>
        </RibbonGroup>
        <RibbonGroup Header="{lex:Loc VianaNET:Labels:RibbonGroupVideoAutoDetectionSelectObjectTitle}" LargeImageSource="/VianaNET;component/Images/SelectObject32.png"
                     Visibility="{Binding Path=ProcessingData.NumberOfTrackedObjects, Source={x:Static application:Viana.Project}, Converter={StaticResource NumberOfObjectsToVisibilityConverter}}">
          <RibbonButton 
            Name="ButtonSelectObject" 
            Click="SelectObjectButtonClick"
            Label="{lex:Loc VianaNET:Labels:ButtonSelectObjectLabelTitle}" 
            LargeImageSource="/VianaNET;component/Images/SelectObject32.png" 
            SmallImageSource="/VianaNET;component/Images/SelectObject16.png" 
            ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonSelectObjectToolTipTitle}"
            ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonSelectObjectToolTipDescription}" 
            IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"/>
        </RibbonGroup>
        <RibbonGroup Header="{lex:Loc VianaNET:Labels:RibbonGroupVideoAutoDetectionColorOptionsLabelTitle}" LargeImageSource="/VianaNET;component/Images/ColorDetection32.png">
          <RibbonToggleButton 
            Name="ButtonIsUsingColorDetection" 
            Label="{lex:Loc VianaNET:Labels:ButtonIsUsingColorDetectionLabelTitle}" 
            LargeImageSource="/VianaNET;component/Images/ColorDetection32.png" 
            SmallImageSource="/VianaNET;component/Images/ColorDetection16.png" 
            ToolTipTitle="{lex:Loc VianaNET:Labels:ButtonIsUsingColorDetectionToolTipTitle}"
            ToolTipDescription="{lex:Loc VianaNET:Labels:ButtonIsUsingColorDetectionToolTipDescription}" 
            IsChecked="{Binding Path=ProcessingData.IsUsingColorDetection, Source={x:Static application:Viana.Project}}"/>
          <Grid Name="ColorDetectionGrid" Margin="10,1,1,1">
            <Grid.ColumnDefinitions>
              <ColumnDefinition/>
              <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition/>
              <RowDefinition/>
              <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" 
                   Content="{lex:Loc VianaNET:Labels:RibbonLabelAutoDetectionTolerance}"
                   Margin="0" Padding="1"/>
            <vianaNet:SliderValue 
              Grid.Row="0" Grid.Column="1"
            x:Name="SliderThreshold"
            MinWidth="100"
            Height="20"                      
            Minimum="0"
            Maximum="255"
            SmallChange="1" 
            LargeChange="1" 
            TickFrequency="1"             
            IsSnapToTickEnabled="True" 
            IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"/>
            <Label Grid.Row="1" Grid.Column="0" 
                   Content="{lex:Loc VianaNET:Labels:RibbonLabelAutoDetectionBlobMinDiameter}"
                   Margin="0" Padding="1"/>
            <vianaNet:SliderValue 
              Grid.Row="1" Grid.Column="1"
            x:Name="SliderMinDiameter"
            Height="20"
            MinWidth="100"
            Minimum="1"
            Maximum="500"
            SmallChange="1" 
            IsSnapToTickEnabled="True"
            IsEnabled="{Binding Path=HasVideo, Source={x:Static control:Video.Instance}}"/>
            <Label Grid.Row="2" Grid.Column="0" 
                   Content="{lex:Loc VianaNET:Labels:RibbonLabelAutoDetectionBlobMaxDiameter}"
