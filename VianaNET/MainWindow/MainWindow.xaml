        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupChartOptionsLabelTitle}">
          <r:RibbonButton Click="ChartDisplayOptionsButtonClick" 
                         SmallImageSource="/VianaNET;component/Images/Options16.png" 
                         LargeImageSource="/VianaNET;component/Images/Options32.png"
                         Label="{lex:LocText VianaNET:Labels:ChartDisplayOptionsLabelTitle}"
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ChartDisplayOptionsToolTipTitle}" 
