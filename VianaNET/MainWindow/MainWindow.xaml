<r:RibbonWindow x:Class="VianaNET.MainWindow.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:r="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
    xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
    xmlns:lex="http://schemas.root-project.org/xaml/presentation"
                xmlns:Application="clr-namespace:VianaNET.Application"
                xmlns:Control="clr-namespace:VianaNET.Modules.Video.Control"
                xmlns:Controls="clr-namespace:VianaNET.CustomStyles.Controls" xmlns:Data="clr-namespace:VianaNET.Data"
                xmlns:Interpolation="clr-namespace:VianaNET.Data.Interpolation"
                xmlns:MainWindow="clr-namespace:VianaNET.MainWindow" lex:LocalizeDictionary.DesignCulture="de"
    ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen"
    Icon="/VianaNET;component/Images/VianaNET.ico"
    Height="479" Width="900" MinHeight="300" MinWidth="400" WindowStyle="ThreeDBorderWindow"
    Title="{lex:LocText VianaNET:Labels:ApplicationTitle}" Closing="RibbonWindowClosing">

  <r:RibbonWindow.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/VianaNET;component/CustomStyles/Styles/VianaStyle.xaml"/>
        <!--<ResourceDictionary	Source="/RibbonControlsLibrary;component/Themes/Office2007Blue.xaml" />-->
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </r:RibbonWindow.Resources>
  <r:Ribbon DockPanel.Dock="Top" 
              Title="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type r:RibbonWindow}},Path=Title}" 
              x:Name="mainRibbon" BorderThickness="1" BorderBrush="Black">
      <r:Ribbon.ApplicationMenu>
        <r:RibbonApplicationMenu KeyTip="S" Label="Datei" IsMainMenu="True">
          <r:RibbonApplicationMenuItem 
                        Command="{Binding Path=SaveCommand}"
                        Header="{lex:LocText VianaNET:Labels:QATButtonSaveLabelTitle}"
                        ImageSource="/VianaNET;component/Images/Save32.png"
                        QuickAccessToolBarImageSource="/VianaNET;component/Images/Save16.png" 
                        ToolTipDescription="{lex:LocText VianaNET:Labels:QATButtonSaveToolTipDescription}" 
                        ToolTipTitle="{lex:LocText VianaNET:Labels:QATButtonSaveLabelTitle}"
                        Visibility="Collapsed"/>
          <r:RibbonApplicationMenuItem 
                         ImageSource="/VianaNET;component/Images/LoadVideo32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/LoadVideo16.png"
                         Header="{lex:LocText VianaNET:Labels:ButtonLoadVideoLabelTitle}" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonLoadVideoToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonLoadVideoToolTipDescription}" />
          <r:RibbonApplicationMenuItem 
                         ImageSource="/VianaNET;component/Images/RecordVideo32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/RecordVideo16.png"
                         Header="{lex:LocText VianaNET:Labels:ButtonCaptureVideoLabelTitle}" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonCaptureVideoToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonCaptureVideoToolTipDescription}" />
          <r:RibbonSeparator/>
          <r:RibbonApplicationSplitMenuItem
            Header="{lex:LocText VianaNET:Labels:ButtonExportDataLabelTitle}"
            ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportDataToolTipTitle}"
            ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportDataToolTipDescription}"
            ImageSource="/VianaNET;component/Images/ExportData32.png" >
            <r:RibbonApplicationMenuItem Click="ExportDataToTxtButtonClick" 
                         Header="{lex:LocText VianaNET:Labels:ButtonExportDataToTxtLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportToTxt32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportToTxt16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportDataToTxtToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportDataToTxtToolTipDescription}"
                         IsEnabled="{Binding Path=HasSamples, Source={x:Static Data:VideoData.Instance}}"/>
            <r:RibbonApplicationMenuItem Click="ExportDataToCsvButtonClick" 
                         Header="{lex:LocText VianaNET:Labels:ButtonExportDataToCsvLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportToCsv32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportToCsv16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportDataToCsvToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportDataToCsvToolTipDescription}"
                         IsEnabled="{Binding Path=HasSamples, Source={x:Static Data:VideoData.Instance}}"/>
            <r:RibbonApplicationMenuItem Click="ExportDataToXmlButtonClick" 
                         Header="{lex:LocText VianaNET:Labels:ButtonExportDataToXmlLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportToXml32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportToXml16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportDataToXmlToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportDataToXmlToolTipDescription}"
                         IsEnabled="{Binding Path=HasSamples, Source={x:Static Data:VideoData.Instance}}"/>
            <r:RibbonApplicationMenuItem Click="ExportDataToXlsButtonClick" 
                         Header="{lex:LocText VianaNET:Labels:ButtonExportDataToXlsLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportToXls32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportToXls16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportDataToXlsToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportDataToXlsToolTipDescription}"
                         IsEnabled="{Binding Path=HasSamples, Source={x:Static Data:VideoData.Instance}}"/>
          </r:RibbonApplicationSplitMenuItem>
          <r:RibbonApplicationSplitMenuItem 
            Header="{lex:LocText VianaNET:Labels:ButtonExportChartLabelTitle}"
            ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportChartToolTipTitle}"
            ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportChartToolTipDescription}"
            ImageSource="/VianaNET;component/Images/ExportChart32.png" >
            <r:RibbonApplicationMenuItem Click="ExportChartToClipboardButtonClick" 
                         Header="{lex:LocText VianaNET:Labels:ButtonExportChartToClipboardLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportChartToClipboard32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportChartToClipboard16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportChartToClipboardToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportChartToClipboardToolTipDescription}" />
            <r:RibbonApplicationMenuItem 
                         Click="ExportChartToFileButtonClick" 
                         Header="{lex:LocText VianaNET:Labels:ButtonExportChartToFileLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportChartToFile32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportChartToFile16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportChartToFileToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportChartToFileToolTipDescription}" />
            <r:RibbonApplicationMenuItem 
                         Click="ExportChartToWordButtonClick" 
                         Header="{lex:LocText VianaNET:Labels:ButtonExportChartToWordLabelTitle}" 
                         ImageSource="/VianaNET;component/Images/ExportChartToWord32.png" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/ExportChartToWord16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportChartToWordToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportChartToWordToolTipDescription}" />
          </r:RibbonApplicationSplitMenuItem>
          <r:RibbonSeparator/>
          <r:RibbonApplicationMenuItem Click="CloseButtonClick" 
                         Header="{lex:LocText VianaNET:Labels:ButtonCloseApplicationLabelTitle}" 
                         QuickAccessToolBarImageSource="/VianaNET;component/Images/Reset16.png" 
                         ImageSource="/VianaNET;component/Images/Reset32.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonCloseApplicationToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonCloseApplicationToolTipDescription}" />
        </r:RibbonApplicationMenu>
      </r:Ribbon.ApplicationMenu>
      <r:RibbonTab x:Name="RibbonTabAnalysis" Header="{lex:LocText VianaNET:Labels:RibbonTabAnalysisLabel}">
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupManualAquisitionLabelTitle}">
          <r:RibbonButton Click="ManualDataAquisitionButtonClick"
                         Label="{lex:LocText VianaNET:Labels:ButtonManualDataAquisitionLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/ManualDataAquisition32.png"
                         SmallImageSource="/VianaNET;component/Images/ManualDataAquisition16.png"
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonManualDataAquisitionToolTipTitle}"
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonManualDataAquisitionToolTipDescription}"
                         IsEnabled="{Binding Path=ImageProcessing.IsTargetColorSet, Source={x:Static Control:Video.Instance}}"/>
        </r:RibbonGroup>
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupAutomaticAquisitionLabelTitle}">
          <r:RibbonButton Click="SelectColorButtonClick" 
                         Name="SelectColorRibbonButton"
                         Label="{lex:LocText VianaNET:Labels:ButtonSelectColorLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/SelectColor32.png" 
                         SmallImageSource="/VianaNET;component/Images/SelectColor16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonSelectColorToolTipTitle}"
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonSelectColorToolTipDescription}" />
          <r:RibbonButton Click="ClipVideoButtonClick"
                         Label="{lex:LocText VianaNET:Labels:ButtonClipVideoLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/ClipVideo32.png"
                         SmallImageSource="/VianaNET;component/Images/ClipVideo16.png"
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonClipVideoToolTipTitle}"
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonClipVideoToolTipDescription}"
                         IsEnabled="{Binding Path=VideoElement.HasVideo, Source={x:Static Control:Video.Instance}}"/>

          <r:RibbonButton Name="StartAutomaticAquisition" 
                          Click="AutomaticDataAquisitionButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonAutomaticDataAquisitionLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/AutomaticDataAquisition32.png" 
                         SmallImageSource="/VianaNET;component/Images/AutomaticDataAquisition16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonAutomaticDataAquisitionToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonAutomaticDataAquisitionToolTipDescription}"
                          Visibility="{Binding Path=IsDataAcquisitionRunning,Source={x:Static Control:Video.Instance}, Converter={StaticResource BoolVisibleConverterInverse}}"
                          />
          <r:RibbonButton Name="StopAutomaticAquisition"
                          Visibility="{Binding Path=IsDataAcquisitionRunning,
              Source={x:Static Control:Video.Instance},
              Converter={StaticResource BoolVisibleConverter}}"
                         Click="AutomaticDataAquisitionStopButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonAutomaticDataAquisitionStopLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/AutomaticDataAquisitionStop32.png" 
                         SmallImageSource="/VianaNET;component/Images/AutomaticDataAquisitionStop16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonAutomaticDataAquisitionStopToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonAutomaticDataAquisitionStopToolTipDescription}" 
                         IsEnabled="{Binding Path=VideoElement.HasVideo, Source={x:Static Control:Video.Instance}}"/>
        </r:RibbonGroup>
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupVideoAutoDetectionOptionsLabelTitle}">
          <r:RibbonButton 
            Visibility="{Binding Path=ImageProcessing.NumberOfTrackedObjects, Source={x:Static Control:Video.Instance}, Converter={StaticResource NumberOfObjectsToVisibilityConverter}}"
            Name="ButtonSelectObject" 
            Click="SelectObjectButtonClick"
            Label="{lex:LocText VianaNET:Labels:ButtonSelectObjectLabelTitle}" 
            LargeImageSource="/VianaNET;component/Images/SelectObject32.png" 
            SmallImageSource="/VianaNET;component/Images/SelectObject16.png" 
            ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonSelectObjectToolTipTitle}"
            ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonSelectObjectToolTipDescription}" 
            IsEnabled="{Binding Path=VideoElement.HasVideo, Source={x:Static Control:Video.Instance}}"/>
          <Controls:RibbonSliderValue 
            x:Name="SliderThreshold"
            Style="{StaticResource RibbonSliderValue}"
            MinWidth="100"
            Height="20"                      
            Minimum="0"
            Maximum="255"
            SliderDescription="{lex:LocText VianaNET:Labels:RibbonLabelAutoDetectionTolerance}"
            SmallChange="1" 
            LargeChange="1" 
            TickFrequency="1"             
            IsSnapToTickEnabled="True" 
            IsEnabled="{Binding Path=VideoElement.HasVideo, Source={x:Static Control:Video.Instance}}"/>
          <Controls:RibbonSliderValue 
            x:Name="SliderMinDiameter"
            Style="{StaticResource RibbonSliderValue}"
            Height="20"
            MinWidth="100"
            Minimum="1"
            Maximum="500"
            SliderDescription="{lex:LocText VianaNET:Labels:RibbonLabelAutoDetectionBlobMinDiameter}"
            SmallChange="1" 
            IsSnapToTickEnabled="True"
            IsEnabled="{Binding Path=VideoElement.HasVideo, Source={x:Static Control:Video.Instance}}"/>
          <Controls:RibbonSliderValue 
            x:Name="SliderMaxDiameter"
            Style="{StaticResource RibbonSliderValue}"
            Height="20"
            MinWidth="100"
            Minimum="1"             
            Maximum="500"
            SliderDescription="{lex:LocText VianaNET:Labels:RibbonLabelAutoDetectionBlobMaxDiameter}"
            SmallChange="1" 
            IsSnapToTickEnabled="True"
            IsEnabled="{Binding Path=VideoElement.HasVideo, Source={x:Static Control:Video.Instance}}"/>
        </r:RibbonGroup>
      </r:RibbonTab>
      <r:RibbonTab x:Name="RibbonTabHome" Header="{lex:LocText VianaNET:Labels:RibbonTabHomeLabel}">
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupOpenVideoLabelTitle}">
          <r:RibbonButton Click="LoadVideoButtonClick"
                         LargeImageSource="/VianaNET;component/Images/LoadVideo32.png" 
                         SmallImageSource="/VianaNET;component/Images/LoadVideo16.png"
                         Label="{lex:LocText VianaNET:Labels:ButtonLoadVideoLabelTitle}"
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonLoadVideoToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonLoadVideoToolTipDescription}"/>
          <r:RibbonButton Click="RecordVideoButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonRecordVideoLabelTitle}"
                         SmallImageSource="/VianaNET;component/Images/RecordVideo16.png" 
                         LargeImageSource="/VianaNET;component/Images/RecordVideo32.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonRecordVideoToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonRecordVideoToolTipDescription}"
                         IsEnabled="{Binding Path=HasVideoInputDevices, Source={x:Static Control:Video.Instance}}"/>
          <r:RibbonButton Click="CaptureVideoButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonCaptureVideoLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/Capture32.png" 
                         SmallImageSource="/VianaNET;component/Images/Capture16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonCaptureVideoToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonCaptureVideoToolTipDescription}" 
                         IsEnabled="{Binding Path=HasVideoInputDevices, Source={x:Static Control:Video.Instance}}"/>
        </r:RibbonGroup>
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupPrepareLabelTitle}">
          <r:RibbonButton Click="CalibrateVideoButtonClick"
                         Label="{lex:LocText VianaNET:Labels:ButtonCalibrateVideoLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/Calibrate32.png"
                         SmallImageSource="/VianaNET;component/Images/Calibrate16.png"
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonCalibrateVideoToolTipTitle}"
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonCalibrateVideoToolTipDescription}"
                         IsEnabled="{Binding Path=VideoElement.HasVideo, Source={x:Static Control:Video.Instance}}"/>
          <r:RibbonButton Name="SelectNumberOfObjectsButton"
                         Click="SelectNumberOfObjectsButtonClick"
                         Label="{lex:LocText VianaNET:Labels:ButtonSelectNumberOfObjectsLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/SelectColor32.png" 
                         SmallImageSource="/VianaNET;component/Images/SelectColor16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonSelectNumberOfObjectsToolTipTitle}"
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonSelectNumberOfObjectsToolTipDescription}" 
                         IsEnabled="{Binding Path=VideoElement.HasVideo, Source={x:Static Control:Video.Instance}}"/>
          <r:RibbonButton Click="ManualDataAquisitionButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonManualDataAquisitionLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/ManualDataAquisition32.png" 
                         SmallImageSource="/VianaNET;component/Images/ManualDataAquisition16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonManualDataAquisitionToolTipTitle}"
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonManualDataAquisitionToolTipDescription}"
                         IsEnabled="{Binding Path=VideoElement.HasVideo, Source={x:Static Control:Video.Instance}}"/>
          <r:RibbonButton Click="ChooseAutomaticAnalysisButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonChooseAutomaticAnalysisLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/AutomaticDataAquisition32.png" 
                         SmallImageSource="/VianaNET;component/Images/AutomaticDataAquisition16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonChooseAutomaticAnalysisToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonChooseAutomaticAnalysisToolTipDescription}"
                         IsEnabled="{Binding Path=VideoElement.HasVideo, Source={x:Static Control:Video.Instance}}"/>
        </r:RibbonGroup>
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupWindowsLabelTitle}">
          <r:RibbonButton Click="VideoWindowButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonVideoWindowLabelTitle}"
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonVideoWindowToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonVideoWindowToolTipDescription}" 
                         SmallImageSource="/VianaNET;component/Images/VideoWindow16.png" 
                         LargeImageSource="/VianaNET;component/Images/VideoWindow32.png" />
          <r:RibbonButton Click="DatagridWindowButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonDatagridWindowLabelTitle}" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonDatagridWindowToolTipTitle}"
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonDatagridWindowToolTipDescription}"
                         SmallImageSource="/VianaNET;component/Images/Datagrid16.png"
                         LargeImageSource="/VianaNET;component/Images/Datagrid32.png" />
          <r:RibbonButton Click="ChartWindowButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonChartWindowLabelTitle}" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonChartWindowToolTipTitle}"
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonChartWindowToolTipDescription}"
                         SmallImageSource="/VianaNET;component/Images/Chart16.png"
                         LargeImageSource="/VianaNET;component/Images/Chart32.png" />
        </r:RibbonGroup>
      </r:RibbonTab>
      <r:RibbonTab x:Name="RibbonTabVideo" Header="{lex:LocText VianaNET:Labels:RibbonTabVideoLabel}">
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupVideoShowWindowLabelTitle}">
          <r:RibbonButton Click="VideoWindowButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonVideoWindowLabelTitle}"
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonVideoWindowToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonVideoWindowToolTipDescription}" 
                         SmallImageSource="/VianaNET;component/Images/VideoWindow16.png" 
                         LargeImageSource="/VianaNET;component/Images/VideoWindow32.png" />
        </r:RibbonGroup>
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupVideoSelectDeviceLabelTitle}">
          <Label Content="{lex:LocText VianaNET:Labels:RibbonVideoDevicesSelectDeviceLabelTitle}"/>
          <r:RibbonComboBox IsEditable="False" IsReadOnly="False" SelectionBoxWidth="120" >
            <r:RibbonGallery Name="VideoInputDeviceCombo"
                             SelectedItem="{Binding Source={x:Static Control:Video.Instance}, Path=VideoCapturerElement.VideoCaptureDevice}">
              <r:RibbonGalleryCategory ItemsSource="{Binding Source={x:Static Control:Video.Instance}, Path=VideoInputDevices}" DisplayMemberPath="Name" />
            </r:RibbonGallery>
          </r:RibbonComboBox>
          <r:RibbonButton Click="VideoCaptureDevicePropertiesButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonVideoCaptureDevicePropertiesLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/VideoDeviceOptions32.png" 
                         SmallImageSource="/VianaNET;component/Images/VideoDeviceOptions16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonVideoCaptureDevicePropertiesToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonVideoCaptureDevicePropertiesToolTipDescription}" 
                         IsEnabled="{Binding Path=VideoCapturerElement.IsRunning, Source={x:Static Control:Video.Instance}}"/>
        </r:RibbonGroup>
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupVideoCalibrationOptionsLabelTitle}">
          <r:RibbonCheckBox Name="ShowCalibrationCheckbox"  
                            Click="CalibrationOptionsShowCalibrationButtonClick" 
                            Label="{lex:LocText VianaNET:Labels:ShowCalibrationLabelTitle}"
                            ToolTipTitle="{lex:LocText VianaNET:Labels:ShowCalibrationToolTipTitle}" 
                            ToolTipDescription="{lex:LocText VianaNET:Labels:ShowCalibrationToolTipDescription}"
                            IsEnabled="{Binding Path=IsVideoCalibrated, Source={x:Static Data:Calibration.Instance}}" 
                            IsChecked="True"/>
          <r:RibbonCheckBox Name="ShowClipRegionCheckbox" 
                            Click="CalibrationOptionsShowClipRegionButtonClick" 
                            Label="{lex:LocText VianaNET:Labels:ShowClipRegionLabelTitle}"
                            ToolTipTitle="{lex:LocText VianaNET:Labels:ShowClipRegionToolTipTitle}" 
                            ToolTipDescription="{lex:LocText VianaNET:Labels:ShowClipRegionToolTipDescription}" 
                            IsEnabled="{Binding Path=HasClipRegion, Source={x:Static Data:Calibration.Instance}}" 
                            IsChecked="True"/>
        </r:RibbonGroup>
      </r:RibbonTab>
      <r:RibbonTab x:Name="RibbonTabDatagrid" Header="{lex:LocText VianaNET:Labels:RibbonTabDatagridLabel}">
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupDatagridShowWindowLabelTitle}">
          <r:RibbonButton Click="DatagridWindowButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonDatagridWindowLabelTitle}" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonDatagridWindowToolTipTitle}"
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonDatagridWindowToolTipDescription}"
                         SmallImageSource="/VianaNET;component/Images/Datagrid16.png"
                         LargeImageSource="/VianaNET;component/Images/Datagrid32.png" />
        </r:RibbonGroup>
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupDatagridExportLabelTitle}">
          <r:RibbonButton Click="ExportDataToTxtButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonExportDataToTxtLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/ExportToTxt32.png" 
                         SmallImageSource="/VianaNET;component/Images/ExportToTxt16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportDataToTxtToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportDataToTxtToolTipDescription}"
                         IsEnabled="{Binding Path=HasSamples, Source={x:Static Data:VideoData.Instance}}"/>
          <r:RibbonButton Click="ExportDataToCsvButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonExportDataToCsvLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/ExportToCsv32.png" 
                         SmallImageSource="/VianaNET;component/Images/ExportToCsv16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportDataToCsvToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportDataToCsvToolTipDescription}"
                         IsEnabled="{Binding Path=HasSamples, Source={x:Static Data:VideoData.Instance}}"/>
          <r:RibbonButton Click="ExportDataToXmlButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonExportDataToXmlLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/ExportToXml32.png" 
                         SmallImageSource="/VianaNET;component/Images/ExportToXml16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportDataToXmlToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportDataToXmlToolTipDescription}"
                         IsEnabled="{Binding Path=HasSamples, Source={x:Static Data:VideoData.Instance}}"/>
          <r:RibbonButton Click="ExportDataToXlsButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonExportDataToXlsLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/ExportToXls32.png" 
                         SmallImageSource="/VianaNET;component/Images/ExportToXls16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportDataToXlsToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportDataToXlsToolTipDescription}"
                         IsEnabled="{Binding Path=HasSamples, Source={x:Static Data:VideoData.Instance}}"/>
        </r:RibbonGroup>
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupDatagridUpdateDataLabelTitle}">
          <r:RibbonButton Click="DeleteDataButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonDeleteDataLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/DataDelete32.png" 
                         SmallImageSource="/VianaNET;component/Images/DataDelete16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonDeleteDataToolTipTitle}" 
