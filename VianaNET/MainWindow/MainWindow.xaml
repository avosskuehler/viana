      <r:RibbonTab x:Name="RibbonTabChart" Header="{lex:LocText VianaNET:Labels:RibbonTabChartLabel}">
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupChartShowWindowLabelTitle}">
          <r:RibbonButton Click="ChartWindowButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonChartWindowLabelTitle}" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonChartWindowToolTipTitle}"
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonChartWindowToolTipDescription}"
                         SmallImageSource="/VianaNET;component/Images/Chart16.png"
                         LargeImageSource="/VianaNET;component/Images/Chart32.png" />
        </r:RibbonGroup>
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupChartExportLabelTitle}">
          <r:RibbonButton Click="ExportChartToClipboardButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonExportChartToClipboardLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/ExportChartToClipboard32.png" 
                         SmallImageSource="/VianaNET;component/Images/ExportChartToClipboard16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportChartToClipboardToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportChartToClipboardToolTipDescription}" />
          <r:RibbonButton Click="ExportChartToFileButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonExportChartToFileLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/ExportChartToFile32.png" 
                         SmallImageSource="/VianaNET;component/Images/ExportChartToFile16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportChartToFileToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportChartToFileToolTipDescription}" />
          <r:RibbonButton Click="ExportChartToWordButtonClick" 
                         Label="{lex:LocText VianaNET:Labels:ButtonExportChartToWordLabelTitle}" 
                         LargeImageSource="/VianaNET;component/Images/ExportChartToWord32.png" 
                         SmallImageSource="/VianaNET;component/Images/ExportChartToWord16.png" 
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonExportChartToWordToolTipTitle}" 
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonExportChartToWordToolTipDescription}" />
