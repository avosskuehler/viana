        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupLanguageLabelTitle, ForceCulture=en }">
          <r:RibbonComboBox>
            <r:RibbonGallery Name="LanguageCombo" SelectionChanged="LanguageComboSelectionChanged">
              <r:RibbonGalleryCategory >
                <r:RibbonGalleryItem Content="Deutsch" IsSelected="True"/>
                <r:RibbonGalleryItem Content="English"/>
              </r:RibbonGalleryCategory>
            </r:RibbonGallery>
          </r:RibbonComboBox>
        </r:RibbonGroup>
        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupStyleLabelTitle}">
          <r:RibbonButton Click="ChangeColorButtonClick"
                         Label="{lex:LocText VianaNET:Labels:ButtonChangeColorSchemeLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/Color32.png"
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonChangeColorSchemeToolTipTitle}"
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonChangeColorSchemeToolTipDescription}" />
          <r:RibbonButton Click="ResetColorButtonClick"
                         Label="{lex:LocText VianaNET:Labels:ButtonResetColorSchemeLabelTitle}"
                         LargeImageSource="/VianaNET;component/Images/ColorReset32.png"
                         ToolTipTitle="{lex:LocText VianaNET:Labels:ButtonResetColorSchemeToolTipTitle}"
                         ToolTipDescription="{lex:LocText VianaNET:Labels:ButtonResetColorSchemeToolTipDescription}" />
