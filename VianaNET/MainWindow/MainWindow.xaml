        <r:RibbonGroup Header="{lex:LocText VianaNET:Labels:RibbonGroupDatagridOptionsLabelTitle}">
          <r:RibbonCheckBox Name="DisplayUnitsCheckbox" 
                            IsChecked="{Binding Path=IsShowingUnits, Source={x:Static Data:Calibration.Instance}}"
