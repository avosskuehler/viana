<UserControl x:Class="VianaNET.LabeledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="100" />
      <ColumnDefinition Width="140" />
    </Grid.ColumnDefinitions>
    <CheckBox x:Name="ElementCheckBox" Grid.Column="0" VerticalAlignment="Center" Checked="ElementCheckBox_Checked"
              Unchecked="ElementCheckBox_Checked" />
    <TextBox x:Name="ElementTextBox" Grid.Column="1" TextChanged="ElementTextBox_TextChanged"
             GotFocus="ElementTextBox_GotFocus" />
  </Grid>
</UserControl>