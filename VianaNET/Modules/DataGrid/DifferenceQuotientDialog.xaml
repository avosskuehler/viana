<Window x:Class="VianaNET.Modules.DataGrid.DifferenceQuotientDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        xmlns:vianaNet="clr-namespace:VianaNET"
        lex:LocalizeDictionary.DesignCulture="de"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Height="300" Width="250" WindowStyle="ThreeDBorderWindow"
        Title="{lex:Loc VianaNET:Labels:DifferenceQuotientDialogTitle}" ShowInTaskbar="True"
        Icon="/VianaNET;component/Images/VianaNET.ico" Topmost="True">
  <Window.Resources>
    <ResourceDictionary Source="/VianaNET;component/CustomStyles/Styles/VianaStyle.xaml" />
  </Window.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Border Grid.Row="0" Background="{StaticResource MainBackgroundBrush}">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="5">
          <TextBlock Name="Description" FontWeight="Bold" TextWrapping="Wrap"
                     Text="{lex:Loc VianaNET:Labels:DifferenceQuotientDialogDescription}" />
          <RadioButton Name="ForwardRadioButton" Content="{lex:Loc VianaNET:Labels:DifferenceQuotientForwardTitle}"
                       GroupName="Quotient" />
          <vianaNet:VisualContainerElement Margin="5" x:Name="ForwardFormulaContainerElement"
                                           SnapsToDevicePixels="True" />
          <RadioButton Name="CentralRadioButton" Content="{lex:Loc VianaNET:Labels:DifferenceQuotientCentralTitle}"
                       GroupName="Quotient" />
          <vianaNet:VisualContainerElement Margin="5" x:Name="CentralFormulaContainerElement"
                                           SnapsToDevicePixels="True" />
          <RadioButton Name="BackwardRadioButton" Content="{lex:Loc VianaNET:Labels:DifferenceQuotientBackwardTitle}"
                       GroupName="Quotient" />
          <vianaNet:VisualContainerElement Margin="5" x:Name="BackwardFormulaContainerElement"
                                           SnapsToDevicePixels="True" />
        </StackPanel>
      </Grid>
    </Border>
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Name="OK" Height="23" Width="80" IsDefault="True" Margin="5" Content="{lex:Loc VianaNET:Labels:OK}"
              Click="OkClick" />
      <Button Name="Cancel" Height="23" Width="80" IsDefault="False" Margin="5"
              Content="{lex:Loc VianaNET:Labels:Cancel}" Click="CancelClick" />
    </StackPanel>
  </Grid>
</Window>